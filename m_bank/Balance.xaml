<Window x:Class="m_bank.Balance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:m_bank"
        mc:Ignorable="d"
        Title="Balance" Height="450" Width="450">
    <Grid>
        <StackPanel Margin="0,0,0,343">
            <Label Content="Check Balance" HorizontalContentAlignment="Center" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        </StackPanel>
        <StackPanel Margin="26,118,225,242">
            <Label Content="Enter Account ID"/>
        </StackPanel>
        <StackPanel Margin="95,250,95,110">
            <Button x:Name="btnBalance" Content="Check Balance" FontSize="16" FontWeight="Bold" Click="btnBalance_Click"/>
        </StackPanel>
        <StackPanel Margin="294,118,10,242">
            <TextBox x:Name="txtID" TextWrapping="Wrap" Width="129" Height="34" FontSize="14"/>
        </StackPanel>
        <StackPanel Margin="95,360,95,0">
            <Button x:Name="btnExit" Content="Exit" FontSize="16" FontWeight="Bold" Click="btnExit_Click"/>
        </StackPanel>

    </Grid>
</Window>
