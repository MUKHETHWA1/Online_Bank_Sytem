<Window x:Class="m_bank.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:m_bank"
        mc:Ignorable="d"
        Title="ForgotPassword" Height="450" Width="500">
    <Grid>
        <StackPanel Margin="68,10,68,344">
            <Label Content="Forgot Password" Height="51" HorizontalContentAlignment="Center" FontSize="18" FontStyle="Italic"/>
        </StackPanel>
        <StackPanel Margin="10,137,283,217">
            <Label Content="Enter Your Username" Height="51" HorizontalContentAlignment="Center" FontSize="18" FontStyle="Italic" Width="204"/>
        </StackPanel>
        <StackPanel Margin="68,302,68,52">
            <Button x:Name="btnNext" Content="Next" Height="41" Width="212" FontSize="20" FontWeight="Bold" Click="btnNext_Click"/>
        </StackPanel>
        <StackPanel Margin="266,137,54,217">
            <TextBox x:Name="txtEnterAccId" TextWrapping="Wrap" Width="174" Height="46" FontSize="16"/>
        </StackPanel>


    </Grid>
</Window>
